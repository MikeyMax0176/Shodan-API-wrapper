{
  "openapi": "3.0.0",
  "info": {
    "title": "Shodan API Wrapper",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://shodan-api.onrender.com"
    }
  ],
  "paths": {
    "/ip-info": {
      "get": {
        "operationId": "getIpInfo",
        "parameters": [
          {
            "name": "ip",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Host details"
          }
        }
      }
    },
    "/search": {
      "get": {
        "operationId": "searchShodan",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results"
          }
        }
      }
    }
  }
}